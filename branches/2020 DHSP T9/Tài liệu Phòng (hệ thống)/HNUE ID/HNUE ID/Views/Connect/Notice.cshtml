@using Resources
<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>@Actions.TT</th>
            <th>@Actions.Division</th>
            <th>@Actions.Name</th>
            <th>@Actions.Noticer</th>
            <th class="text-center w50"><i class="fa fa-eye" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        $('table.table').DataTable(
         {
             processing: true,
             serverSide: true,
             filter: false,
             orderMulti: false,
             order: [[0, "desc"]],
             pageLength: 25,
             iDisplayLength: 25,
             aLengthMenu: [[25, 50, 100], [25, 50, 100]],
             dom: '<"top"f>rt<"bottom"ilp><"clear">',
             ajax: { url: '@Url.Action("GetNotice")', type: "GET", contentType: "application/json" },
             columns: [
                 {
                     "data": "Id",
                     "className": "text-center",
                     "bSortable": false,
                     "width": "50px"
                 },
                 {
                     "data": "Department",
                     "bSortable": false
                 },
                 {
                     "data": "Name",
                     "bSortable": true
                 },
                 {
                     "data": "Staff",
                     "className": "text-center",
                     "bSortable": false
                 },
                 {
                     "data": "Id",
                     "bSortable": false,
                     "className": "text-center",
                     "render": function (data) {
                         return '<a href="@Url.Action("NoticeView")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-eye" aria-hidden="true"></i></a>';
                     }
                 }
             ]
         });
    });
</script>