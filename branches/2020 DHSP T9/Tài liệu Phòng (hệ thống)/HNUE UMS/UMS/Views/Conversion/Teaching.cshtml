@using Resources
<div class="text-right">
    <a href="@Url.Action("TeachingEdit")" class="btn btn-primary" onclick="return showmodal(this)">@Html.Raw(Actions.Add)</a>
</div>
<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>TT</th>
            <th>Tên</th>
            <th>Nhóm</th>
            <th class="text-center">Loại</th>
            <th class="text-center">Hệ số quy đổi</th>
            <th class="text-center">Số SV/Nhóm</th>
            <th>Ghi chú</th>
            <th class="text-center w50"><i class="fa fa-pencil" aria-hidden="true"></i></th>
            <th class="text-center w50"><i class="fa fa-trash" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        $('table.table').DataTable(
        {
            processing: true,
            serverSide: true,
            filter: false,
            order: [[0, "desc"]],
            "scrollX": true,
            orderMulti: false,
            bAutoWidth: false,
            pageLength: 25,
            iDisplayLength: 25,
            aLengthMenu: [[25, 50, 100], [25, 50, 100]],
            dom: '<"top"f>rt<"bottom"ilp><"clear">',
            ajax: { url: '@Url.Action("GetTeaching")', type: "GET", contentType: "application/json" },
            columns: [
                {
                    "data": "Id",
                    "className": "text-center",
                    "bSortable": false,
                    "width": "50px"
                },
                {
                    "data": "Name",
                    "bSortable": true
                },
                {
                    "data": "Category",
                    "bSortable": false
                },
                {
                    "data": "Type",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Ratio",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "GroupSize",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Desc",
                    "bSortable": false
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("TeachingEdit")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-pencil" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("TeachingDelete")?id=' + data + '" onclick="@Actions.Confirm"><i class="fa fa-trash" aria-hidden="true"></i></a>';
                    }
                }
            ]
        });
    });
</script>