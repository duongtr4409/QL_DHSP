@using Resources
@model Ums.Models.Data.SemesterModel
@{
    Layout = "~/Views/Shared/_Popup.cshtml";
}
@using (Html.BeginForm("SemesterEdit", "Data", FormMethod.Post, new {  @id = "formData", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-4">
                <label>@Actions.Year</label>
                <select name="YearId" id="YearId" class="form-control">
                    @foreach (var i in ViewBag.Years)
                {
                        <option value="@i.Id">@i.Name</option>
                    }
                </select>
                <script>if (@Model.YearId > 0)$("#YearId").val(@Model.YearId);</script>
            </div>
            <div class="form-group col-8">
                <label>@Actions.Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group col-6">
                <label>@Actions.From</label>
                @Html.TextBoxFor(m => m.From, new { @class = "form-control datepicker" })
            </div>
            <div class="form-group col-6">
                <label>@Actions.To</label>
                @Html.TextBoxFor(m => m.To, new { @class = "form-control datepicker" })
            </div>
            <div class="form-group col-12">
                <label>@Actions.Desc</label>
                @Html.TextAreaFor(m => m.Desc, new { @class = "form-control" })
            </div>
            <div class="text-center col-12">
                <button type="submit" class="btn btn-primary">@Html.Raw(Actions.Update)</button>
                <button name="act_continue" value="false" onclick="$(this).val(true)" type="submit" class="btn btn-danger">@Html.Raw(Actions.UpdateNew)</button>
                <a class="btn btn-default" href="javascript:window.parent.closemodal()">@Html.Raw(Actions.Back)</a>
            </div>
        </div>
    </div>
}
<script>
    window.parent.setmodalsize("450px", "400px");
</script>
