@using Resources
<div class="text-right">
    <a href="@Url.Action("TitleEdit")" class="btn btn-primary" onclick="return showmodal(this)">@Html.Raw(Actions.Add)</a>
</div>
<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>@Actions.TT</th>
            <th>@Actions.Code</th>
            <th>@Actions.Name</th>
            <th>HSL 1</th>
            <th>HSL 2</th>
            <th>HSL 3</th>
            <th>HSL 4</th>
            <th>HSL 5</th>
            <th>HSL 6</th>
            <th>HSL 7</th>
            <th>HSL 8</th>
            <th>HSL 9</th>
            <th>HSL 10</th>
            <th>HSL 11</th>
            <th>HSL 12</th>
            <th class="text-center w50"><i class="fa fa-pencil" aria-hidden="true"></i></th>
            <th class="text-center w50"><i class="fa fa-trash" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function() {
        $('table.table').DataTable(
        {
            processing: true,
            serverSide: true,
            filter: false,
            order: [[0, "desc"]],
            orderMulti: false,
            bAutoWidth: false,
            pageLength: 25,
            iDisplayLength: 25,
            aLengthMenu: [[25, 50, 100], [25, 50, 100]],
            dom: '<"top"f>rt<"bottom"ilp><"clear">',
            ajax: { url: '@Url.Action("GetTitle")', type: "GET", contentType: "application/json" },
            columns: [
                {
                    "data": "Id",
                    "className": "text-center",
                    "bSortable": false,
                    "width": "50px"
                },
                {
                    "data": "Code",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Name",
                    "bSortable": true
                },
                {
                    "data": "Level1",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level2",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level3",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level4",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level5",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level6",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level7",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level8",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level9",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level10",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level11",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Level12",
                    "className": "text-center",
                    "bSortable": true
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a id="' + data + '" href="@Url.Action("TitleEdit")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-pencil" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("TitleDelete")?id=' + data + '" onclick="@Actions.Confirm"><i class="fa fa-trash" aria-hidden="true"></i></a>';
                    }
                }
            ]
        });
    });
</script>
