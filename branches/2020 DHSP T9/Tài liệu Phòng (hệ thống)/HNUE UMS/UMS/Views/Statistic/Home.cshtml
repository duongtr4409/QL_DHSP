            <td class="text-center" colspan="3">Thiếu/Không HT</td>
            <td class="text-center" colspan="5" id="b1"></td>
            <td class="text-center" colspan="4" id="b2"></td>
            <td class="text-center" colspan="3" id="b3"></td>
            <td class="text-center" colspan="3"></td>
