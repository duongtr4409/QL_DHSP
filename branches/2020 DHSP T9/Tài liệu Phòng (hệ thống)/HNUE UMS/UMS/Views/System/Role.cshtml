@using Resources
<div class="text-right">
    <a href="@Url.Action("RoleEdit")" class="btn btn-primary" onclick="return showmodal(this)">@Html.Raw(Resources.Actions.Add)</a>
</div>
<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>@Actions.TT</th>
            <th>@Actions.Name</th>
            <th>@Actions.Function</th>
            <th>@Actions.FunctionManager</th>
            <th>@Actions.Grade</th>
            <th>@Actions.GradeManager</th>
            <th>@Actions.Permission</th>
            <th class="text-center w50"><i class="fa fa-pencil" aria-hidden="true"></i></th>
            <th class="text-center w50"><i class="fa fa-trash" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        $('table.table').DataTable(
        {
            processing: true,
            serverSide: true,
            filter: false,
            order: [[0, "desc"]],
            orderMulti: false,
            pageLength: 25,
            iDisplayLength: 25,
            aLengthMenu: [[25, 50, 100], [25, 50, 100]],
            dom: '<"top"f>rt<"bottom"ilp><"clear">',
            ajax: { url: '@Url.Action("GetRole")', type: "GET", contentType: "application/json" },
            columns: [
                {
                    "data": "Id",
                    "className": "text-center",
                    "bSortable": false,
                    "width": "50px"
                },
                {
                    "data": "Name",
                    "bSortable": true
                },
                {
                    "data": "Functions",
                    "bSortable": true
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("RoleFunction")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-cogs" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "RoleTs",
                    "bSortable": true
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("RoleGrade")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-address-book-o" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("RoleUser")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-users" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a class="ids" id="' + data + '" href="@Url.Action("RoleEdit")?id=' + data + '" onclick="return showmodal(this)"><i class="fa fa-pencil" aria-hidden="true"></i></a>';
                    }
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function(data) {
                        return '<a href="@Url.Action("RoleDelete")?id=' + data + '" onclick="@Actions.Confirm"><i class="fa fa-trash" aria-hidden="true"></i></a>';
                    }
                }
            ]
        });
    });
</script>
