@using Resources

<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>USER ID</th>
            <th>USER TYPE</th>
            <th>USER KEY</th>
            <th>USERNAME</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th class="text-center w50"><i class="fa fa-trash" aria-hidden="true"></i></th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        var t = $('table.table').DataTable(
        {
            processing: true,
            serverSide: true,
            filter: false,
            "scrollX": true,
            order: [[0, "desc"]],
            orderMulti: false,
            pageLength: 25,
            iDisplayLength: 25,
            aLengthMenu: [[25, 50, 100], [25, 50, 100]],
            dom: '<"table-buttons"B><"clear"><"top"f>rt<"bottom"ilp><"clear">',
            buttons: ['copy', 'excel', 'pdf', 'print'],
            ajax: { url: '@Url.Action("GetUsers")', type: "GET", contentType: "application/json" },
            columns: [
                {
                    "data": "Id",
                    "className": "text-center",
                    "bSortable": false,
                    "width": "50px"
                },
                {
                    "data": "UserType",
                    "bSortable": true
                },
                {
                    "data": "UserKey",
                    "bSortable": true
                },
                {
                    "data": "Username",
                    "bSortable": true
                },
                {
                    "data": "Name",
                    "bSortable": true
                },
                {
                    "data": "Email",
                    "bSortable": true
                },
                {
                    "data": "Phone",
                    "bSortable": true
                },
                {
                    "data": "Id",
                    "bSortable": false,
                    "className": "text-center",
                    "render": function (data) {
                        return '<a class="btn-table-delete" href="@Url.Action("IdDelete")?id=' + data + '" onclick="@Actions.Confirm"><i class="fa fa-trash" aria-hidden="true"></i></a>';
                    }
                }
            ]
            });
        $(document).on("click", ".btn-table-delete", function () {
            $.get($(this).attr("href")).done(function () {
                t.ajax.reload();
            });
            return false;
        });
    });
</script>
