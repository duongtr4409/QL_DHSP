@using Resources
@model Ums.Models.Conversion.ResearchingModel
@{
    Layout = "~/Views/Shared/_Popup.cshtml";
}
@using (Html.BeginForm("ResearchingEdit", "Conversion", FormMethod.Post, new { @id = "formData", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-8">
                <label>Danh mục</label>
                @Html.DropDownListFor(m => m.CategoryId, Model.Categories, new { @class = "form-control" })
            </div>
            <div class="form-group col-4">
                <label>Mã loại</label>
                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
            </div>
            <div class="form-group col-12">
                <label>Tên</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <div class="form-group col-3">
                <label>Giờ chuẩn tối đa</label>
                @Html.TextBoxFor(m => m.Ratio, new { @class = "form-control" })
            </div>
            <div class="form-group col-3">
                <label>Giờ vật chất tối đa</label>
                @Html.TextBoxFor(m => m.MaxMaterialTime, new { @class = "form-control number" })
            </div>
            <div class="form-group col-3">
                <label>Hệ số cho nhiều thành viên</label>
                @Html.TextBoxFor(m => m.Factor, new { @class = "form-control" })
            </div>
            <div class="form-group col-3">
                <label>Độ lệch thành viên</label>
                @Html.TextBoxFor(m => m.MemberOffset, new { @class = "form-control number" })
            </div>
            <div class="form-group col-3">
                <label>SL tương đương</label>
                @Html.TextBoxFor(m => m.EquivalentQuantity, new { @class = "form-control number" })
            </div>
            <div class="form-group col-3">
                <label>Đơn vị tính</label>
                @Html.TextBoxFor(m => m.Unit, new { @class = "form-control" })
            </div>
            <div class="form-group col-3">
                <label>Loại giờ NCKH</label>
                <div class="form-control">
                    @Html.CheckBoxFor(i => i.IsDirectly) Giờ NCKH trực tiếp
                </div>
            </div>
            <div class="form-group col-3">
                <label>Thành viên</label>
                <div class="form-control">
                    @Html.CheckBoxFor(i => i.HasMember) Chia giờ cho thành viên
                </div>
            </div>
            <div class="text-center col-12">
                <button type="submit" class="btn btn-primary">@Html.Raw(Actions.Update)</button>
                <button name="act_continue" value="false" onclick="$(this).val(true)" type="submit" class="btn btn-danger">@Html.Raw(Actions.UpdateNew)</button>
                <a class="btn btn-default" href="javascript:window.parent.closemodal()">@Html.Raw(Actions.Back)</a>
            </div>
        </div>
    </div>
}
<script>
    window.parent.setmodalsize("850px", "450px");
</script>
