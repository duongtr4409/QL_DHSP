@using Resources
@using Ums.Core.Entities.Shared
@model Ums.Models.System.StandardModel
@{
    Layout = "~/Views/Shared/_Popup.cshtml";
}
@using (Html.BeginForm("StandardEdit", "Conversion", FormMethod.Post, new { @id = "formData", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-12">
                <label>Chức danh</label>
                <select name="TitleId" class="form-control">
                    @foreach (IdName i in ViewBag.Titles)
                    {
                        <option @(Model.TitleId == i.Id ? "selected=''" : "") value="@i.Id">@i.Name</option>
                    }
                </select>
            </div>
            <div class="form-group col-4">
                <label>Giờ giảng nghĩa vụ</label>
                @Html.TextBoxFor(m => m.Teaching, new { @class = "form-control number" })
            </div>
            <div class="form-group col-4">
                <label>Giờ NCKH nghĩa vụ</label>
                @Html.TextBoxFor(m => m.Researching, new { @class = "form-control number" })
            </div>
            <div class="form-group col-4">
                <label>Giờ HĐ khác nghĩa vụ</label>
                @Html.TextBoxFor(m => m.Working, new { @class = "form-control number" })
            </div>
            <div class="text-center col-12">
                <button type="submit" class="btn btn-primary">@Html.Raw(Actions.Update)</button>
                <button name="act_continue" value="false" onclick="$(this).val(true)" type="submit" class="btn btn-danger">@Html.Raw(Actions.UpdateNew)</button>
                <a class="btn btn-default" href="javascript:window.parent.closemodal()">@Html.Raw(Actions.Back)</a>
            </div>
        </div>
    </div>
}
<script>
    window.parent.setmodalsize("500px", "270px");
</script>
