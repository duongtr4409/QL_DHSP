@using Resources

<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>USER TYPE</th>
            <th>USERNAME</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>SESSION</th>
            <th>LOGON</th>
            <th>LAST ACCESS</th>
            <th class="text-center">Reset</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        var t = $('table.table').DataTable(
            {
                processing: true,
                serverSide: true,
                filter: false,
                order: [[1, "asc"]],
                orderMulti: false,
                pageLength: 25,
                iDisplayLength: 25,
                aLengthMenu: [[25, 50, 100], [25, 50, 100]],
                dom: '<"top"f>rt<"bottom"ilp><"clear">',
                ajax: { url: '@Url.Action("GetPasswords")', type: "GET", contentType: "application/json" },
                columns: [
                    {
                        "data": "Id",
                        "className": "text-center",
                        "bSortable": false,
                        "width": "50px"
                    },
                    {
                        "data": "UserType",
                        "bSortable": true
                    },
                    {
                        "data": "Username",
                        "bSortable": true
                    },
                    {
                        "data": "Name",
                        "bSortable": true
                    },
                    {
                        "data": "Email",
                        "bSortable": true
                    },
                    {
                        "data": "Session",
                        "className": "text-center",
                        "bSortable": true
                    },
                    {
                        "data": "Logon",
                        "className": "text-center",
                        "bSortable": true
                    },
                    {
                        "data": "LastAccess",
                        "className": "text-center",
                        "bSortable": true
                    },
                    {
                        "data": "UserKey",
                        "bSortable": false,
                        "className": "text-center",
                        "render": function (data, m, n) {
                            if (n.UserType == "STAFF") {
                                return '<a class="btn btnReset" id="' + data + '"><i class="fa fa-refresh"></i></a>';
                            }
                            return "";
                        }
                    }
                ]
            });
        $(document).on("click", ".btnReset", function () {
            if (confirm('Bạn có chắc không?')) {
                $.post("@Url.Action("StaffReset")?staffId=" + $(this).attr("id")).done(function (r) {
                    if (r.Result === 1) {
                        alert("Reset mật khẩu thành công");
                    }
                });
            }
        });
    });
</script>
