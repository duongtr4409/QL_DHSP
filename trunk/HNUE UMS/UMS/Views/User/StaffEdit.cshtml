@using Resources
@model Ums.Models.System.StaffUserModel
@{
    Layout = "~/Views/Shared/_Popup.cshtml";
}
@using (Html.BeginForm("AccountEdit", "System", FormMethod.Post, new { @id = "formData", role = "form"}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.StaffId)
    <div class="container-fluid">
        <div class="form-group">
            <label>Họ và tên</label>
            @Html.DisplayFor(m => m.Name)
        </div>
        <div class="form-group">
            <label>Đơn vị</label>
            @Html.DisplayFor(m => m.Department)
        </div>
        <div class="form-group">
            <label>Tên đăng nhập</label>
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Quản trị viên</label>
            <span>@Html.CheckBoxFor(m => m.IsAdmin) Is Admin</span>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">@Html.Raw(Actions.Update)</button>
            <a class="btn btn-default" href="javascript:window.parent.closemodal()">@Html.Raw(Actions.Back)</a>
        </div>
    </div>
}
<script>
    window.parent.setmodalsize("600px", "450px");
</script>
