@using Resources

<table class="table table-striped table-bordered table-short table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>USERNAME</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>ADDRESS</th>
