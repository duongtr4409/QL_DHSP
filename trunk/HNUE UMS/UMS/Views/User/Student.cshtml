                filter: false,
                order: [[1, "asc"]],
                orderMulti: false,
                pageLength: 25,
                iDisplayLength: 25,
                aLengthMenu: [[25, 50, 100], [25, 50, 100]],
                dom: '<"table-buttons"B><"clear"><"top"f>rt<"bottom"ilp><"clear">',
                buttons: ['copy', 'excel', 'pdf', 'print'],
                ajax: { url: '@Url.Action("GetStudents")', type: "GET", contentType: "application/json" },
                columns: [
                    {
                        "data": "Id",
                        "className": "text-center",
                        "bSortable": false,
                        "width": "50px"
                    },
                    {
                        "data": "Username",
                        "bSortable": false,
                    },
                    {
                        "data": "Name",
                        "bSortable": false,
                    },
                    {
                        "data": "Email",
                        "bSortable": false,
                    },
                    {
                        "data": "Phone",
                        "bSortable": false,
                    },
                    {
                        "data": "Address",
                        "bSortable": false,
                    }
                ]
            });
    });
</script>