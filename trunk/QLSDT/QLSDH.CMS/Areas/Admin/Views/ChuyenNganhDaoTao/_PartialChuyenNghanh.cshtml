@model List<TEMIS.Model.ChuyenNganhDaoTao>
<table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th style="text-align:center">Mã ngành</th>
            <th style="text-align:center">Ngành học</th>
            <th style="text-align:center">Mã số CN</th>
            <th style="text-align:center">Mã ngành thạc sĩ</th>
            <th style="text-align:center">Thuộc ngành</th>
            <th style="text-align:center">Thuộc khoa</th>
            <th style="width:15%!important;text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
        <tr>
            <td>@item.MaNganh</td>
            <td>@item.TenChuyenNganh</td>
            <td>@item.MaChuyenNganh</td>
            <td>@item.MaSoCN_ThS</td>
            <td>@item.TenNganh</td>
            <td>@item.TenKhoa</td>
            <td style="width:15%; text-align:center">
                <button type="button" onclick="openedit('@item.Id', '@item.TenChuyenNganh','@item.MaChuyenNganh', '@item.NganhId', '@item.KhoaId', '@item.MaSoCN_ThS')" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').dataTable({
            "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>
