
@{
    ViewBag.Title = "Chi tiết giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thông tin giảng viên</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tentruycap">
