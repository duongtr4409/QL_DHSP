
@model List<TEMIS.CMS.Areas.Admin.Models.HocPhanGiangVienViewModel>
<table id="datatable-buttonss" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Mã học phần</th>
            <th style="text-align:center">Tên học phần</th>
            <th style="text-align:center">Tên giảng viên</th>
            <th style="text-align:center">Học hàm học vị</th>
            
            <th style="width:15%!important;text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <th class="text-center">@i</th>
                    <td>@item.MaHocPhan</td>
                    <td>@item.TenHocPhan</td>
                    <td>@item.TenGiangVien</td>
                    <td>@item.HocHamHocVi</td>
                  
                    <td style="width:15%; text-align:center">
                        <button type="button" onclick="openaddGV('@item.IdHocPhan')" class="btn btn-success" style="margin-bottom:0px!important; margin-left:15px!important">
                            <i class="fa fa-plus" title="thêm mới"></i>
                        </button>
                    </td>
                </tr>
                i = i + 1;
            }
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#datatable-buttonss').DataTable();
    });
</script>