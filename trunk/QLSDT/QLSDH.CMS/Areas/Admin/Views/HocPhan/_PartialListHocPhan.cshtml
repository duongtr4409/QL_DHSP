@model IEnumerable<TEMIS.Model.HocPhan>

<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
        <thead>
            <tr role="row">
                <th style="text-align:center">STT</th>
                <th style="text-align:center">Mã học phần</th>
                <th style="text-align:center">Tên học phần</th>
                <th style="text-align:center">số DVHT</th>
                <th style="text-align:center">Thuộc học phần</th>
                <th style="text-align:center">Loại học phần</th>
                <th style="text-align:center">Số tiết LT, TH</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.MaHocPhan</td>
                        <td>@item.TenHocPhan</td>
                        <td>@item.SoDVHT</td>
                        <td>
                            @if (item.LoaiHP == 1)
                            {
                                @Html.Raw("Học phần 1")
                            }
                            else if (item.LoaiHP == 2)
                            {
                                @Html.Raw("Học phần 2")
                            }
                            else if (item.LoaiHP == 3)
                            {
                                @Html.Raw("Học phần 3")
                            }
                            else if (item.LoaiHP == 4)
                            {
                                @Html.Raw("Học phần 4")
                            }
                            else
                            {
                                @Html.Raw("Học phần không xác định")
                            }
                        </td>
                        <td>
                            @if (item.TuChon == true)
                            {
                                @Html.Raw("Tự chọn")
                            }
                            else
                            {
                                @Html.Raw("Bắt buộc")
                            }
                        </td>
                        <td>@item.SoTietLyThuyet , @item.SoTietThucHanh</td>
                        <td style="width:15%; text-align:center">
                            <button type="button" onclick="openedit('@item.Id', '@item.MaHocPhan','@item.TenHocPhan','@item.KhoaHocId','@item.KhoaId','@item.NganhId','@item.ChuyenNganhId', '@item.SoDVHT', '@item.SoTietLyThuyet', '@item.SoTietThucHanh','@item.TuChon', '@item.SoTinChi', '@item.LoaiHP' )" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                            <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
                        </td>
                    </tr>
                    i = i + 1;
                }
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#datatable-buttons').dataTable({
            "pageLength": 25
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>