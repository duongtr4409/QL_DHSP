@using TEMIS.CMS.Areas.Admin.Models
@model List<NCSViewModel>

<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info" style=" width: 100%!important">
        <thead>
            <tr role="row">
                <th style="text-align:center">STT</th>
                <th style="text-align:center">Mã HV</th>
                <th style="text-align:center">Họ và tên</th>
                <th style="text-align:center">Ngày Sinh</th>
                <th style="text-align:center">Giới tính</th>
                <th style="text-align:center">Điện thoại</th>
                <th style="text-align:center">Email</th>
                <th style="text-align:center">Khoa</th>
                <th>Tình trạng</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.STT</td>
                        <td><a href="@Url.Action("QuanLyHV","HocVien",new { maHV=item.Ma })">@item.Ma</a></td>
                        <td><a href="@Url.Action("QuanLyHV","HocVien",new { maHV=item.Ma })">@item.HoTen</a></td>
                        <td>
                            @if (item.NgaySinh != null)
                            {
                                @item.NgaySinh.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>@item.GioiTinh</td>
                        <td>@item.DienThoai</td>
                        <td>@item.Email</td>
                        <td>@item.Khoa</td>
                        <td>
                            @*<progress max="100" value="@item.progress" class="html5">
            <div class="progress-bar">
                <span style="width: @item.progress%">@item.progress%</span>
            </div>
        </progress>*@
                            <a>@item.progress</a>
                            <input type="range" id="vol" name="vol" min="0" max="7" value="@item.progress" disabled>

                        </td>
                        <td style="width:15%; text-align:center">
                            @*<button type="button" onclick="window.location.href='@Url.Action("Edit", "HocVien" , new { id=item.Id })'" class="btn btn-primary btn-sm" title="Sửa"><i class="fa fa-edit"></i></button>
                                <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger btn-sm" title="Xóa"><i class="fa fa-trash"></i></button>
                                <button type="button" onclick="window.location.href='@Url.Action("PhanQuyen", "HocVien" , new { id=item.Id })'" class="btn btn-primary btn-sm"><i title="Phân quyền" class="fa fa-lock"></i></button>*@
                            <button type="button" onclick="window.location.href='@Url.Action("QuanLyHV","HocVien",new { maHV=item.Ma })'" class="btn btn-danger btn-danger">Quản trị NCS</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#datatable-buttons').dataTable({
            "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>

