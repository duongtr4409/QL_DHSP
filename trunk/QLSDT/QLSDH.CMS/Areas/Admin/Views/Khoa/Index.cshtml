@using CoreAPI.Entity;
@model IEnumerable<OrganizationInfo>
@{
    ViewBag.Title = "Quản lý khoa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form action="#" method="post" autocomplete="off">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Quản lý khoa</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <table id="datatable-buttons" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                            <thead>
                                <tr role="row">
                                    <th style="text-align:center">Tên khoa</th>
                                    <th style="text-align:center">Địa chỉ</th>
                                    <th style="text-align:center">Điện thoại</th>
                                    <th style="text-align:center">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Address</td>
                                            <td>@item.Tel</td>
                                            <td>@item.Email</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $(document).ready(function () {
        $('#datatable').dataTable({
            "pageLength": 25
        });
        $('.dataTables_filter input').attr('maxlength', 255);
    });
</script>
