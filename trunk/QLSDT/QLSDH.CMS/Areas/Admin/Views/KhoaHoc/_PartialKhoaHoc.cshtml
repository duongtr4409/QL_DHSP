@model IEnumerable<TEMIS.Model.KhoaHoc>

<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable-buttonss" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
        <thead>
            <tr role="row">
                <th style="text-align:center">STT</th>
                <th style="text-align:center">Khóa học</th>
                <th style="text-align:center">Thời gian Khai giảng</th>
                <th style="text-align:center">Số lượng NCS</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.MaKhoa</td>
                        <td>@DateTime.Parse(item.NgayKhaiGiang.ToString()).ToString("dd-MM-yyyy")</td>
                        <td>@item.SoLuongHocVien</td>
                        <td style="width:15%; text-align:center">
                            <button type="button" onclick="openedit(@item.Id, '@item.MaKhoa', '@DateTime.Parse(item.NgayKhaiGiang.ToString()).ToString("dd-MM-yyyy")', '@item.SoLuongHocVien')" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                            <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
                        </td>
                    </tr>
                    i = i + 1;
                }
            }
        </tbody>
    </table>
</div>
<script>
     $(document).ready(function () {
        $('#datatable-buttonss').dataTable( {
          "pageLength": 25
        } );
        $('.dataTables_filter input').attr('maxlength', 255)
     } );
</script>
