@model IEnumerable<TEMIS.Model.MonHoc>

<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable-buttonss" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
        <thead>
            <tr role="row">
                <th style="text-align:center">STT</th>
                <th style="text-align:center">Mã môn</th>
                <th style="text-align:center">Tên môn</th>
                <th style="text-align:center">Học phần</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.MaMon</td>
                        <td>@item.TenMon</td>
                        <td>@item.HocPhanId</td>
                        <td style="width:15%; text-align:center">
                            <button type="button" onclick="openedit(@item.Id, '@item.MaMon', '@item.TenMon', '@item.HocPhanId')" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                            <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
                        </td>
                    </tr>
                    i = i + 1;
                }
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#datatable-buttons').dataTable({
            "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>