@model TEMIS.Model.BieuMau

@{
    ViewBag.Title = "Thêm mới biểu mẫu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Thêm mới biểu mẫu</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    @using (Html.BeginForm("Create", "QuanLyBieuMau", FormMethod.Post, new { enctype = "multipart/form-data", id = "frmCreate" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-3">Tên biểu mẫu</label>
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.Template, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Template, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">Nội dung biểu mẫu</label>
                                <div class="col-md-9">
                                    <input type="file" name="files" id="files" style="width: 100%;" /><br>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-3 col-md-10">
                                    <a href="/Admin/QuanLyBieuMau" class="btn btn-success"><i class="fa fa-backward"></i> Quay lại</a>
                                    <input type="submit" value="Thêm mới" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    }
                    @*@Html.ActionLink("Quay lại", "Index")*@
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </div>
</div>
