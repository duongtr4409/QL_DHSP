@model IEnumerable<TEMIS.Model.TruongThongTin>
<table id="datatable-buttonss" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Tên</th>
            <th style="text-align:center">Loại</th>
            <th style="text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td> @i </td>
                    <td> @item.TenTruongThongTin</td>
                    <td> @item.LoaiTruongThongTin </td>
                    <td style="width:15%; text-align:center">
                        <button type="button" onclick="openedit(@item.Id,@item.IdDanhMuc, '@item.TenTruongThongTin', '@item.LoaiTruongThongTin.Trim()')" class="btn btn-primary">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger">Xóa</button>
                    </td>
                </tr>
                i = i + 1;
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable-buttonss').dataTable({
            "pageLength": 25
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>