@model List<TEMIS.CMS.Areas.Admin.Models.DiemThiViewModel>
@{
    // Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<table id="datatable-buttonss" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            <th style="text-align:center">STT</th>
            <th style="text-align:center">Mã HV</th>
            <th style="text-align:center">Họ và tên</th>
            <th style="text-align:center">Khoa</th>
            <th style="text-align:center">Khóa</th>
            <th style="text-align:center">HP1</th>
            <th style="text-align:center">HP2</th>
            <th style="text-align:center">HP3</th>
            <th style="text-align:center">HP4</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.MaHocVien</td>
                    <td>@item.TenHocVien</td>
                    <td>@item.TenKhoa</td>
                    <td>@item.TenKhoaHoc</td>
                    <td>
                        <a href="#"> @item.DiemHP1</a>
                    </td>
                    <td>
                        <a href="#"> @item.DiemHP2</a>
                    </td>
                    <td>
                        <a href="#"> @item.DiemHP3</a>
                    </td>
                    <td>
                        <a href="#"> @item.DiemHP4</a>
                    </td>
                    @*<td>
                            <a href="@Url.Action("NhapDiem", "QuanLyDiem" , new { magiaovien=item.MaHocVien })">Thông tin khóa học</a>
                        </td>*@
                </tr>
                i = i + 1;
            }
        }
    </tbody>
</table>
<div class="x_content" style="text-align:center">
    @*<button type="button" onclick="opendown()" class="btn btn-success"><i class="fa fa-download" title="Tải về"></i> Download biểu mẫu</button>*@
    @if (Model != null && Model.Count > 0)
    {
        <button type="button" onclick="opendown()" class="btn btn-info">Xuất Excel Điểm</button>
        <a class="btn btn-success" id="hrf_file" style="pointer-events:none"><i class="fa fa-download" title="Tải về"></i>Tải Excel Điểm</a>
    }
</div>
<script>
    $(document).ready(function () {
        $('#datatable-buttonss').dataTable({
            "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
    
</script>

