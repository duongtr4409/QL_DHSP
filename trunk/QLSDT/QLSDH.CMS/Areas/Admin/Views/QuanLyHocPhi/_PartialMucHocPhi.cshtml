@model List<TEMIS.Model.MucHocPhi>
<table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr role="row">
            @*<th style="text-align:center">Mã khoa</th>*@
            <th style="text-align:center">Tên khoa</th>
            <th style="text-align:center">Mã ngành</th>
            <th style="text-align:center">Tên ngành</th>
            <th style="text-align:center">Khoá học</th>
            <th style="text-align:center">Tổng học phí</th>
            <th style="width:15%!important;text-align:center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
        <tr>
            @*<td>@item.MaKhoa</td>*@
            <td>@item.TenKhoa</td>
            <td>@item.MaNganh</td>
            <td>@item.TenNganh</td>
            <td>@item.NamHoc</td>
            <td>@item.HocPhi</td>
            <td style="width:15%; text-align:center">
                <button type="button" onclick="openedit('@item.Id', '@item.MaKhoa','@item.TenKhoa','@item.MaNganh','@item.TenNganh', '@item.NamHoc', @item.HocPhi)" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#datatable').dataTable({
            "pageLength": 25
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>
