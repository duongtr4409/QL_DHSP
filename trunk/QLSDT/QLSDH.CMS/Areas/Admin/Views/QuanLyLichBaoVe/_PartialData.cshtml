@model List<TEMIS.Model.LichBaoVe>
<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
        <thead>
            <tr role="row">
                <th style="text-align:center">STT</th>
                <th style="text-align:center">Tên đề tài</th>
                <th style="text-align:center">Mã NCS</th>
                <th style="text-align:center">Tên NCS</th>
                <th style="text-align:center">Chuyên ngành</th>
                <th style="text-align:center">Khóa học</th>
                <th style="text-align:center">Thời gian bảo vệ</th>
                <th style="text-align:center">Cấp bảo vệ</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <span>@i</span>
                        </td>
                        <td><a href="#">@item.TenDeTai</a></td>
                        <td>
                            @item.MaNCS
                        </td>
                        <td>
                            @item.TenNCS
                        </td>
                        <td>
                            @item.TenChuyenNganh
                        </td>
                        <td>
                            @item.KhoaHoc
                        </td>
                        <td>
                            @item.GioBaoVe @Html.Raw(" giờ ") @DateTime.Parse(item.NgayBaoVe.ToString()).ToString("dd/MM/yyy")
                        </td>
                        <td>
                            @item.CapBaoVe
                        </td>
                        <td style="width:15%; text-align:center">
                            <button type="button" onclick="openedit('@item.Id','@item.TenDeTai','@item.MaNCS','@item.TenNCS','@item.KhoaHoc','@item.ChuyenNganhId','@item.CapBaoVe','@DateTime.Parse(item.NgayBaoVe.ToString()).ToString("dd-MM-yyyy")','@item.GioBaoVe','@item.DiaDiem')" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                            <button type="button" onclick="confirmremove(@item.Id)" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
                        </td>
                    </tr>
                    i = i + 1;
                }
            }
        </tbody>
    </table>
</div>
<script>
    $('#datatable').dataTable({
        "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
    });
    $('.dataTables_filter input').attr('maxlength', 255)
</script>