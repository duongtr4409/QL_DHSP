@model List<TEMIS.Model.ThamSoBieuMau>
<div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
        <thead>
            <tr role="row">
                <th style="text-align:center">Tên tham số</th>
                <th style="text-align:center">Giá trị tham số</th>
                <th style="text-align:center">Kiểu dữ liệu</th>
                <th style="text-align:center">Biểu mẫu</th>
                <th style="width:15%!important;text-align:center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.TenThamSo</td>
                        <td>@item.GiaTriThamSo</td>
                        <td>@item.KieuDuLieu</td>
                        <td>@item.BieuMau</td>
                        <td style="width:15%; text-align:center">
                            <button type="button" onclick="openedit('@item.TenThamSo','@item.GiaTriThamSo', '@item.BieuMauId', '@item.KieuDuLieu', '@item.CauTrucHienThi', @item.ThuTuHienThi)" class="btn btn-primary"><i class="fa fa-edit" title="sửa"></i></button>
                            <button type="button" onclick="confirmremove('@item.TenThamSo')" class="btn btn-danger"><i class="fa fa-trash" title="xóa"></i></button>
                        </td>
                    </tr>
                }
            }
            else
            {
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#datatable').dataTable({
            "pageLength": 25,
            "language": {
                "emptyTable": "Không có dữ liệu"
            }
        });
        $('.dataTables_filter input').attr('maxlength', 255)
    });
</script>