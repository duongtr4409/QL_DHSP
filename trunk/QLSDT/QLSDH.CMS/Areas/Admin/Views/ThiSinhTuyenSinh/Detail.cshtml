@model TEMIS.Model.DangKyTuyenSinh
@using TEMIS.Model;
@using CoreAPI.Entity;
@using TEMIS.Model;
@using CoreAPI.Entity;
@using TEMIS.CMS.Common;
@{
    var roleInfo = (UserRoles)Session[PublicConstant.ROLE_INFO];
    var loginInfo = (TaiKhoan)Session[PublicConstant.LOGIN_INFO];
}
@{
    ViewBag.Title = "Chi tiết thông tin tuyển sinh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    List<OrganizationInfo> listKhoa = (List<OrganizationInfo>)ViewBag.ListKhoa;
    List<City> listCity = (List<City>)ViewBag.ListCity;
    List<District> listDistrict = (List<District>)ViewBag.ListDistrict;
    List<Ward> listWard = (List<Ward>)ViewBag.ListWard;
    HocPhi phidangky = ViewBag.PhiDangKy;
}

<style>
    .lb-themmoi {
        display: inline-block;
        max-width: 100% !important;
        margin-bottom: 5px;
        margin-top: 5px;
        font-weight: 700 !important
    }

    .input-themmoi {
        display: block;
        width: 100% !important;
        height: 34px;
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .col-sm-12 {
        margin-bottom: 10px;
    }

    .required {
        color: red;
    }

    img {
        height: 100%;
    }
</style>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Chi tiết thông tin tuyển sinh</h2>
                <button style="margin-left:10px" type="button" onclick="taifile('@Model.Url_FileUpload_Zip')" class="btn btn-dark" title="Tải tệp file đính kèm"><i class="fa fa-download" title="Tải tệp file đính kèm"></i></button>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-lg-12 col-sm-12">
                    <h3 style="display: inline;">I. Thông tin cá nhân</h3>
                    @if (!roleInfo.Role.Equals(PublicConstant.ROLE_TRUONG_KHOA_DT))
                    {
                        <button type="button" onclick="phanhoi(1)" class="btn btn-dark col-md-offset-1" title="phản hồi"><i class="fa fa-comments-o" title="phản hồi"></i></button>
                    }
                    <hr />
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Họ và tên thí sinh </label>
                    <input name="hovaten" type="text" id="hovaten" required="" value="@Model.HoTen" class="inputdk form-control" placeholder="Họ và tên viết chữ in hoa có dấu" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Giới tính </label>
                    <select name="gioitinh" id="gioitinh" class="inputdk form-control" disabled>
                        <option value="0">-------- Chọn ------</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Ngày sinh </label>
                    <input name="ngaysinh" type="text" id="ngaysinh" required="" value="@DateTime.Parse(Model.NgaySinh.ToString()).ToString("dd-MM-yyyy")" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Nơi sinh </label>
                    <input name="noisinh" type="text" id="noisinh" required="" value="@Model.NoiSinh" class="inputdk form-control" placeholder="Tỉnh mới" disabled>
                </div>
                <div class="col-md-8 col-sm-12">
                    <label>Địa chỉ liên lạc </label>
                    <input name="diachi" type="text" id="diachi" required="" value="@Model.DiaChiLienLac" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Tỉnh/ Thành phố(<span class="required">*</span>)</label>
                    <input name="cmnd_tinhthanh" type="text" id="cmnd_tinhthanh" required="" value="@listCity.Find(ele => @Model.TinhThanh_CMND == ele.CityCode).Name" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Quận/huyện(<span class="required">*</span>)</label>
                    <input name="cmnd_huyen" type="text" id="cmnd_huyen" required="" value="@listDistrict.Find(ele => @Model.Quan_CMND == ele.DistrictCode ).Name" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Xã/Phường(<span class="required">*</span>)</label>
                    <input name="cmnd_xa" type="text" id="cmnd_xa" required="" value="@listWard.Find(ele => @Model.Xa_CMND == ele.WardCode).Name" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Thông tin CMND/CCCD</label>
                    <input name="cmnd" type="text" id="cmnd" required="" class="inputdk form-control" value="@Model.SoCMND" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Ngày cấp</label>
                    <input name="cmnd_ngaycap" type="text" id="cmnd_ngaycap" required="" value="@DateTime.Parse(Model.Ngaycap_CMND.ToString()).ToString("dd-MM-yyyy")" class="inputdk form-control" data-target="#cmnd_ngaycap" data-toggle="cmnd_ngaycap" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Nơi cấp</label>
                    <input name="cmnd_noicap" type="text" id="cmnd_noicap" required="" value="@Model.Noicap_CMND" class="inputdk form-control" disabled>
                </div>

                <div class="col-md-4 col-sm-12">
                    <label>Số điện thoại </label>
                    <input name="sdt" type="number" id="sdt" required="" value="@Model.SoDienThoai" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4 col-sm-12">
                    <label>Email </label>
                    <input name="email" type="text" id="email" required="" value="@Model.Email" class="inputdk form-control" disabled>
                </div>


                <div class="col-lg-12" style="margin-top:15px">
                    <h3 style="display: inline;">II. Thông tin nghề nghiệp</h3>
                    @if (!roleInfo.Role.Equals(PublicConstant.ROLE_TRUONG_KHOA_DT))
                    {
                        <button type="button" onclick="phanhoi(2)" class="btn btn-dark col-md-offset-1" title="phản hồi"><i class="fa fa-comments-o" title="phản hồi"></i></button>
                    }
                    <hr />
                </div>
                <div class="col-md-3  col-sm-12">
                    <label>Nghề nghiệp</label>
                    <input name="cmnd" type="text" id="cmnd" required="" class="inputdk form-control" value="@Model.NgheNghiep" disabled>
                </div>
                <div class="col-md-6  col-sm-12">
                    <label>Cơ quan công tác hiện nay </label>
                    <input name="coquan" type="text" id="coquan" required="" value="@Model.CoQuanCongTacHienNay" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-3  col-sm-12">
                    <label>Năm bắt đầu công tác </label>
                    <input name="namct" type="number" id="namct" value="@Model.NamBatDauCongTac" required="" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-3  col-sm-12">
                    <label>Hiện là cán bộ </label>
