                    @if (!roleInfo.Role.Equals(PublicConstant.ROLE_TRUONG_KHOA_DT))
                    {
                        <button type="button" onclick="phanhoi(5)" class="btn btn-dark col-md-offset-1" title="phản hồi"><i class="fa fa-comments-o" title="phản hồi"></i></button>
                    }
                    <hr />
                </div>
                <div class="col-md-4  col-sm-12">
                    <label>Trường tốt nghiệp (TN) </label>
                    <input name="tentruongts" type="text" id="tentruongts" required="" value="@Model.Truong_TN_ThacSi" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4  col-sm-12">
                    <label>Năm TN </label>
                    <input name="namtnts" type="number" id="namtnts" required="" value="@Model.Nam_TN_ThacSi" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4  col-sm-12">
                    <label>Hệ đào tào </label>
                    <input name="hedtts" type="text" id="hedtts" required="" value="@Model.HeDaoTao_ThacSi" class="inputdk form-control" disabled>
