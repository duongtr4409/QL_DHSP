                {
                    <div class="col-md-12  col-sm-12">
                        <label>File Đính kém </label>
                        <label style="margin-bottom:0px" class="inputdk form-control"><a onclick="xemImg('@Model.Url_FileUpload_Zip/@Model.Url_FileUpload_VB2')">Xem file</a></label>
                    </div>
                }
                <div class="col-lg-12" style="margin-top:15px">
