                    <label>Ngành TN </label>
                    <input name="nganhtn" type="text" id="nganhtn" required="" value="@Model.Nghanh_TN_DaiHoc" class="inputdk form-control" disabled>
                </div>
                <div class="col-md-4  col-sm-12">
                    <label>Điểm TB </label>
                    <input name="diemTb" type="number" id="diemTb" required="" value="@Model.DiemTrungBinh_DaiHoc" class="inputdk form-control" disabled>
