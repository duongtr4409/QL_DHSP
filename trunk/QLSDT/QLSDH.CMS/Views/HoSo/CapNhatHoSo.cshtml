                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <label>Giới tính (<span class="required">*</span>)</label>
                    <select name="gioitinh" id="gioitinh" class="form-control inputdk">
                        <option value="0">-------- Chọn ------</option>
                        <option selected="" value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <label>Ngày sinh (<span class="required">*</span>)</label>
                    <input value="@DateTime.Parse(Model.NgaySinh.ToString()).ToString("dd-MM-yyyy")" name="ngaysinh" type="text" id="ngaysinh" required="" class="form-control inputdk" data-target="#ngaysinh" data-toggle="ngaysinh">
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <label>Nơi sinh (<span class="required">*</span>)</label>
                    <input value="@Model.NoiSinh" name="noisinh" type="text" id="noisinh" required="" class="form-control inputdk" placeholder="Tỉnh mới">
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                    <label>Dân tộc (<span class="required">*</span>)</label>
                    @*<input value="@Model.DanToc" name="dantoc" type="text" id="dantoc" required="" class="form-control inputdk" placeholder="Dân tộc">*@
                    <select name="dantoc" id="dantoc" class="form-control inputdk">
                        <option value="0">-------- Chọn ------</option>
                        @foreach (var item in listDanToc)
                        {
                            if (@item.TenDanToc == @Model.DanToc)
                            {
                                <option selected value="@item.TenDanToc">@item.TenDanToc</option>
                            }
                            else
                            {
                                <option value="@item.TenDanToc">@item.TenDanToc</option>
                            }

                        }
                    </select>
                </div>
