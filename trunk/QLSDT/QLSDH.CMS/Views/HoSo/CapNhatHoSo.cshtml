@model TEMIS.Model.DangKyTuyenSinh
@using TEMIS.Model;
@using CoreAPI.Entity;

@{
    /**/
    ViewBag.Title = "Cập nhật hồ sơ";
    Layout = "~/Views/Shared/_LayoutFontend.cshtml";
    List<ChuyenNganhDaoTao> listChuyenNghanh = (List<ChuyenNganhDaoTao>)ViewBag.ListChuyenNganhDaoTao;
