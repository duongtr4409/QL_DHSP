    <!-- Bootstrap -->
    <link href="~/theme_admin/gentelella/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/theme_admin/gentelella/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/theme_admin/gentelella/vendors/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="~/theme_admin/gentelella/vendors/animate.css/animate.min.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/theme_admin/gentelella/build/css/custom.min.css" rel="stylesheet" />
    <link rel="icon" type="image/jpg" href="~/Images/2bs.jpg" />
    <link href="~/ThemFontend/userstylemain.css" rel="stylesheet">
    <style type="text/css">
    </style>
    <script src="~/ThemFontend/jQuery-2.1.4.min.js"></script>
    <!-- jQuery UI 1.11.2 -->
    <script src="~/ThemFontend/jquery-ui.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/ThemFontend/bootstrap.min.js" type="text/javascript"></script>
    <!-- DATA TABES SCRIPT -->
    <script src="~/ThemFontend/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/ThemFontend/dataTables.bootstrap.min.js" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="~/ThemFontend/app.min.js" type="text/javascript"></script>
    <link href="~/Content/toastr.css" rel="stylesheet" />
    <script src="~/Scripts/toastr.js"></script>

</head>
<body class="nav-md" style="background-color:white">
    <div class="container body">
        <div class="main_container">
            <div class="header container-fluid" style="background:#1d446b none repeat scroll 0 0">
                <div class="row">
                    <div class="col-8" style="padding-top: 5px;">
                        <a class="logo" style="display:flex"  href="@Url.Action("Index","Home")">
                            <!-- <img src="~/Images/logo_blue.svg" class="logo_top" style="" alt="HỆ THỐNG QUẢN LÍ NGHIÊN CỨU SINH" > -->
                            <img src="~/Images/2bs.jpg" class="logo_top" style="width: 40px" alt="CÔNG TY CỔ PHẦN 2BS">
                            <div style="    display: grid;    padding: 5px 0 5px 5px;    align-items: center; color:white">
                                <span class="appname">PHÒNG SAU ĐẠI HỌC</span>
                                <span class="title">Công ty Cổ phần 2bs</span>
                            </div>

                        </a>
                    </div>
                </div>
            </div>
            <div class="login" style="height: 665px;">
                 @RenderBody()
            </div>
        </div>
    </div>

    <script type="text/javascript">
            $(document).ready(function () {
                $('#btnChageMyPass').click(function () {
                    $('#myModal_change_pass').model('show');
                });

                if ('@TempData["message"]') {
                    toastr.success('@TempData["message"]');
                }
                else if ('@TempData["info"]') {
                    toastr.info('@TempData["info"]');
                }
                else if ('@TempData["error"]') {
                    toastr.error('@TempData["error"]');
                }
                else { }
            });
    </script>
</body>

</html>
